<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.vcampus.client.controller.LoginController"
            prefWidth="1000.0" prefHeight="600.0" styleClass="login-background">
    
    <!-- 主容器 - 水平布局 -->
    <HBox alignment="CENTER" spacing="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" 
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        
        <!-- 左侧登录区域 -->
        <VBox alignment="CENTER" spacing="25.0" prefWidth="400.0" styleClass="login-left-panel">
        
        <!-- Logo区域 -->
        <VBox fx:id="logoContainer" alignment="CENTER" spacing="5.0">
            <ImageView fx:id="logoIconView" fitWidth="125.0" preserveRatio="true">
                <image>
                    <Image url="@../images/logo-icon.png" />
                </image>
            </ImageView>
            <ImageView fx:id="logoTextView" fitWidth="150.0" preserveRatio="true">
                <image>
                    <Image url="@../images/logo-text.png" />
                </image>
            </ImageView>
        </VBox>
        
        <!-- 登录表单区域 -->
        <VBox spacing="15.0" styleClass="login-form" maxWidth="320.0">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>
            
            <!-- 用户名输入框 -->
            <VBox spacing="5.0">
                <Label text="用户名" styleClass="field-label" />
                <TextField fx:id="usernameField" promptText="请输入用户名" styleClass="input-field" />
            </VBox>
            
            <!-- 密码输入框 -->
            <VBox spacing="5.0">
                <Label fx:id="passwordLabel" text="密码" styleClass="field-label" />
                <PasswordField fx:id="passwordField" promptText="请输入密码" styleClass="input-field" />
            </VBox>
            
            <!-- 确认密码输入框（仅在忘记密码模式下显示） -->
            <VBox fx:id="confirmPasswordContainer" spacing="5.0" visible="false" managed="false">
                <Label fx:id="confirmPasswordLabel" text="确认密码" styleClass="field-label" />
                <PasswordField fx:id="confirmPasswordField" promptText="请再次输入密码" styleClass="input-field" />
            </VBox>
            
            <!-- 忘记密码链接 -->
            <HBox alignment="CENTER_RIGHT">
                <Hyperlink fx:id="forgotPasswordLink" text="忘记密码？" styleClass="forgot-password-link" />
            </HBox>
            
            
            <!-- 登录按钮 -->
            <Button fx:id="loginButton" text="登录" styleClass="login-button" maxWidth="Infinity" prefHeight="40.0">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Button>
            
            <!-- 状态信息 -->
            <Label fx:id="statusLabel" text="" styleClass="status-label" alignment="CENTER" />
        </VBox>
        
            <!-- 底部提示信息 -->
            <VBox alignment="CENTER" spacing="5.0">
                <Label text="演示账号：1234567/7654321" styleClass="demo-info" />
            </VBox>
            
        </VBox>
        
        <!-- 右侧图片轮播区域 -->
        <VBox fx:id="carouselContainer" alignment="CENTER" prefWidth="600.0" styleClass="carousel-panel">
            <ImageView fx:id="carouselImageView" fitWidth="550.0" preserveRatio="true" styleClass="carousel-image">
                <image>
                    <Image url="@../images/carousel/carousel1.png" />
                </image>
            </ImageView>
            
            <!-- 轮播指示器 -->
            <HBox fx:id="indicatorContainer" alignment="CENTER" spacing="10.0" styleClass="carousel-indicators" visible="false" managed="false">
                <Circle fx:id="indicator1" radius="8.0" styleClass="indicator active" />
                <Circle fx:id="indicator2" radius="8.0" styleClass="indicator" />
                <Circle fx:id="indicator3" radius="8.0" styleClass="indicator" />
                <Circle fx:id="indicator4" radius="8.0" styleClass="indicator" />
            </HBox>
        </VBox>
        
    </HBox>
</AnchorPane>
