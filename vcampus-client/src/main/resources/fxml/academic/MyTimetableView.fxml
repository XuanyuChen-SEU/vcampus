<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox spacing="15.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vcampus.client.controller.MyTimetableController">
    <stylesheets>
        <URL value="@../../css/academic-styles.css" />
    </stylesheets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
            <tabs>
                <Tab fx:id="myCoursesTab" text="已选课程">
                    <content>
                        <TableView fx:id="myCoursesTable">
                            <columns>
                                <TableColumn fx:id="colCourseIdAndName" text="课程号/课程名" prefWidth="180" />
                                <TableColumn fx:id="colTeacher" text="教师" prefWidth="100" />
                                <TableColumn fx:id="colSchedule" text="时间地点" prefWidth="200" />
                                <TableColumn fx:id="colCredits" text="学分" prefWidth="60" />
                                <TableColumn fx:id="colType" text="课程性质" prefWidth="80" />
                                <TableColumn fx:id="colCategory" text="校公选类别" prefWidth="120" />
                                <TableColumn fx:id="colCampus" text="校区" prefWidth="100" />
                                <TableColumn fx:id="colConflict" text="是否冲突" prefWidth="80" />
                                <TableColumn fx:id="colAction" text="操作" prefWidth="80" />
                            </columns>
                        </TableView>
                    </content>
                </Tab>
                <Tab fx:id="dropLogTab" text="退课日志">
                    <content>
                        <TableView fx:id="dropLogTable">
                            <columns>
                                <TableColumn fx:id="colLogCourseIdAndName" text="课程号/课程名" prefWidth="180" />
                                <TableColumn fx:id="colLogTeacher" text="教师" prefWidth="100" />
                                <TableColumn fx:id="colLogType" text="课程性质" prefWidth="80" />
                                <TableColumn fx:id="colLogCredits" text="学分" prefWidth="60" />
                                <TableColumn fx:id="colLogOperator" text="退选操作人" prefWidth="100" />
                                <TableColumn fx:id="colLogDropType" text="退选类型" prefWidth="100" />
                                <TableColumn fx:id="colLogPriority" text="志愿等级" prefWidth="80" />
                            </columns>
                        </TableView>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>