<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox style="-fx-background-color: white; -fx-border-color: #f0f0f0; -fx-border-width: 0 0 1 0;"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.vcampus.client.controller.CourseCardController">
    <children>
        <HBox fx:id="headerRow" alignment="CENTER_LEFT" style="-fx-padding: 15 20;" onMouseClicked="#toggleSessions">
            <cursor><Cursor fx:constant="HAND" /></cursor>
            <children>
                <VBox prefWidth="140.0" spacing="5.0">
                    <children>
                        <Label fx:id="courseIdLabel" style="-fx-text-fill: #333333; -fx-font-size: 14px;" />
                        <Hyperlink fx:id="detailsLink" onAction="#handleDetailsLinkClick" text="课程详情" />
                    </children>
                </VBox>

                <Label fx:id="courseNameLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" HBox.hgrow="ALWAYS" maxWidth="Infinity" />

                <Label fx:id="courseTypeLabel" prefWidth="100.0" alignment="CENTER_LEFT" style="-fx-font-size: 14px; -fx-text-fill: #333333;" maxWidth="Infinity"/>

                <Label fx:id="departmentLabel" prefWidth="180.0" alignment="CENTER_RIGHT" style="-fx-font-size: 14px; -fx-text-fill: #333333;" maxWidth="Infinity"/>

                <Label fx:id="statusLabel" prefWidth="120.0" alignment="CENTER" style="-fx-font-size: 14px;" />
                <Label fx:id="sessionCountLabel" prefWidth="100.0" alignment="CENTER_RIGHT" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />

            </children>
        </HBox>

        <FlowPane fx:id="sessionsContainer" hgap="15.0" vgap="15.0" managed="false" visible="false" style="-fx-background-color: #fafafa; -fx-padding: 20;" />
    </children>
</VBox>