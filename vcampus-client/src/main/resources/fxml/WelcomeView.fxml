<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vcampus.client.controller.WelcomeViewController">
    <children>
        <!-- 滚动容器 -->
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="welcome-background" 
                   AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <content>
                <VBox fx:id="mainContentBox" alignment="CENTER" spacing="50.0" minHeight="800.0" styleClass="welcome-background">
                    <children>
                        <!-- 主标题区域 -->
                        <VBox fx:id="topContentBox" alignment="CENTER" spacing="20.0" prefWidth="800.0">
                            <children>
                                <!-- Logo和标题 -->
                                <HBox alignment="CENTER" spacing="15.0">
                                    <ImageView fx:id="welcomeLogoIcon" fitWidth="60.0" fitHeight="60.0" preserveRatio="true" styleClass="welcome-logo-icon">
                                        <image>
                                            <Image url="@../images/logo-icon.png" />
                                        </image>
                                    </ImageView>
                                    <VBox alignment="CENTER_LEFT" spacing="5.0">
                                        <Label text="V-Campus" styleClass="welcome-main-title" />
                                        <Label text="虚拟校园系统" styleClass="welcome-subtitle" />
                                    </VBox>
                                </HBox>

                                <!-- 欢迎文字 -->
                                <Label text="欢迎使用 V-Campus 虚拟校园系统！" styleClass="welcome-text" />

                                <!-- 系统描述 -->
                                <Label text="一个集成了校园商店、图书馆、学籍管理、教务系统、邮件系统和AI助手等功能的综合性平台"
                                       styleClass="welcome-description"
                                       wrapText="true"
                                       maxWidth="600.0" />
                            </children>
                        </VBox>

                        <!-- 功能卡片区域 -->
                        <VBox fx:id="bottomContentBox" alignment="CENTER" spacing="30.0" prefWidth="800.0">
                            <children>
                                <!-- 功能卡片标题 -->
                                <Label text="系统功能" styleClass="features-title" />

                                <!-- 功能卡片网格 -->
                                <HBox alignment="CENTER" spacing="40.0">
                                    <children>
                                        <!-- 校园商店卡片 -->
                                        <VBox alignment="CENTER" spacing="10.0" styleClass="feature-card">
                                            <children>
                                                <Label text="🛒" styleClass="feature-icon" />
                                                <Label text="校园商店" styleClass="feature-title" />
                                                <VBox alignment="CENTER" spacing="2.0">
                                                    <children>
                                                        <Label text="在线购物平台" styleClass="feature-description" />
                                                        <Label text="商品浏览与购买" styleClass="feature-description" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>

                                        <!-- 图书馆卡片 -->
                                        <VBox alignment="CENTER" spacing="10.0" styleClass="feature-card">
                                            <children>
                                                <Label text="📚" styleClass="feature-icon" />
                                                <Label text="图书馆" styleClass="feature-title" />
                                                <VBox alignment="CENTER" spacing="2.0">
                                                    <children>
                                                        <Label text="图书借阅管理" styleClass="feature-description" />
                                                        <Label text="在线阅读服务" styleClass="feature-description" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>

                                        <!-- 学籍管理卡片 -->
                                        <VBox alignment="CENTER" spacing="10.0" styleClass="feature-card">
                                            <children>
                                                <Label text="📋" styleClass="feature-icon" />
                                                <Label text="学籍管理" styleClass="feature-title" />
                                                <VBox alignment="CENTER" spacing="2.0">
                                                    <children>
                                                        <Label text="个人信息管理" styleClass="feature-description" />
                                                        <Label text="成绩查询服务" styleClass="feature-description" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>

                                        <!-- 教务系统卡片 -->
                                        <VBox alignment="CENTER" spacing="10.0" styleClass="feature-card">
                                            <children>
                                                <Label text="🎓" styleClass="feature-icon" />
                                                <Label text="教务系统" styleClass="feature-title" />
                                                <VBox alignment="CENTER" spacing="2.0">
                                                    <children>
                                                        <Label text="课程表管理" styleClass="feature-description" />
                                                        <Label text="选课系统" styleClass="feature-description" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <!-- 第二行功能卡片 -->
                                <HBox alignment="CENTER" spacing="40.0">
                                    <children>
                                        <!-- 邮件系统卡片 -->
                                        <VBox alignment="CENTER" spacing="10.0" styleClass="feature-card">
                                            <children>
                                                <Label text="📧" styleClass="feature-icon" />
                                                <Label text="邮件系统" styleClass="feature-title" />
                                                <VBox alignment="CENTER" spacing="2.0">
                                                    <children>
                                                        <Label text="收发邮件管理" styleClass="feature-description" />
                                                        <Label text="草稿箱功能" styleClass="feature-description" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>

                                        <!-- AI助手卡片 -->
                                        <VBox alignment="CENTER" spacing="10.0" styleClass="feature-card">
                                            <children>
                                                <Label text="🤖" styleClass="feature-icon" />
                                                <Label text="AI助手" styleClass="feature-title" />
                                                <VBox alignment="CENTER" spacing="2.0">
                                                    <children>
                                                        <Label text="智能问答服务" styleClass="feature-description" />
                                                        <Label text="学习辅助功能" styleClass="feature-description" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- 底部信息 -->
                        <VBox alignment="CENTER" spacing="5.0" prefWidth="800.0">
                            <children>
                                <Label text="© 2024 V-Campus Virtual Campus System" styleClass="copyright" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>