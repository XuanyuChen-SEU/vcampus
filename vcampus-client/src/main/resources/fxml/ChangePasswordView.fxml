<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vcampus.client.controller.ChangePasswordController">
    <children>
        <!-- 主容器 -->
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <children>
                <!-- 标题 -->
                <Label text="修改密码" styleClass="change-password-title">
                    <font>
                        <Font size="32.0" />
                    </font>
                </Label>
                
                <!-- 表单容器 -->
                <VBox alignment="CENTER" spacing="15.0" styleClass="change-password-form">
                    <children>
                        <!-- 原密码 -->
                        <VBox spacing="5.0">
                            <Label text="原密码" styleClass="field-label" />
                            <PasswordField fx:id="oldPasswordField" promptText="请输入原密码" styleClass="input-field" />
                        </VBox>
                        
                        <!-- 新密码 -->
                        <VBox spacing="5.0">
                            <Label text="新密码" styleClass="field-label" />
                            <PasswordField fx:id="newPasswordField" promptText="请输入新密码" styleClass="input-field" />
                        </VBox>
                        
                        <!-- 确认新密码 -->
                        <VBox spacing="5.0">
                            <Label text="确认新密码" styleClass="field-label" />
                            <PasswordField fx:id="confirmPasswordField" promptText="请再次输入新密码" styleClass="input-field" />
                        </VBox>
                        
                        <!-- 状态信息 -->
                        <Label fx:id="statusLabel" text="" styleClass="status-label" />
                        
                        <!-- 按钮容器 -->
                        <VBox alignment="CENTER" spacing="10.0">
                            <Button fx:id="changePasswordButton" text="确认修改" onAction="#handleChangePassword" styleClass="change-password-submit-button" />
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
