<?xml version="1.0" encoding="UTF-8"?>



<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>



<!-- fx:controller 属性将此视图与 LibraryController 类绑定 -->
<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vcampus.client.controller.LibraryController">
    <children>
        <Label text="图书馆模块" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="图书信息查询" styleClass="header-label">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <children>
                <TextField fx:id="searchField" promptText="按书名、作者或ISBN搜索..." HBox.hgrow="ALWAYS" styleClass="text-field" />
                <Button fx:id="searchButton" onAction="#handleSearchBook" text="🔍 搜索" styleClass="primary-button" />
                <Button fx:id="refreshButton" onAction="#handleRefresh" text="🔄 刷新" styleClass="secondary-button" />
                <Button fx:id="addNewBookButton" onAction="#handleAddNewBook" text="➕ 添加新书" styleClass="success-button" />
            </children>
        </HBox>


        <!--
          【模块内容区】
          所有图书馆模块的UI控件 (如图书列表、借阅按钮) 都应放置在这个 Pane 内部。
          使用 fx:id="contentPane" 可以在控制器中引用此 Pane。
        -->
        <Pane fx:id="contentPane" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60.0">

            <!-- 示例: <TableView fx:id="bookTable" prefHeight="520.0" prefWidth="760.0" /> -->
            <TableView fx:id="bookTableView" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="titleColumn" prefWidth="200.0" text="书名" />
                    <TableColumn fx:id="authorColumn" prefWidth="150.0" text="作者" />
                    <TableColumn fx:id="publisherColumn" prefWidth="150.0" text="出版社" />
                    <TableColumn fx:id="isbnColumn" prefWidth="130.0" text="ISBN" />
                    <TableColumn fx:id="quantityColumn" prefWidth="80.0" text="馆藏数量" />
                    <TableColumn fx:id="actionsColumn" prefWidth="120.0" text="操作" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>








        </Pane>
    </children>
</AnchorPane>