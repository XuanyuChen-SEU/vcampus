<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" styleClass="background"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vcampus.client.controller.LibraryController">
    <stylesheets>
        <URL value="@../../css/LibraryView.css" />
    </stylesheets>

    <top>
        <HBox fx:id="topBarHBox" alignment="CENTER_LEFT" prefHeight="70.0" spacing="20.0"
              styleClass="glass-panel">
            <padding>
                <Insets bottom="15.0" left="25.0" right="25.0" top="15.0" />
            </padding>
            <children>
                <StackPane>
                    <children>
                        <Label fx:id="libraryLabel" text="图书馆">
                            <font>
                                <Font name="System Bold" size="26.0" />
                            </font>
                        </Label>
                        <Button fx:id="viewToggleButton" onAction="#handleViewToggle" styleClass="action-button, toggle-button" text="切换视图" visible="false">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </StackPane>
                <TextField fx:id="searchField" onAction="#handleSearch" prefHeight="50.0" promptText="搜索..." styleClass="search-box" HBox.hgrow="ALWAYS"/>
                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearch" styleClass="action-button, search-button" text="搜索">
                    <graphic>
                        <SVGPath content="M15.5 14h-.79l-.28-.27A6.471 6.471 0 0 0 16 9.5 6.5 6.5 0 1 0 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" styleClass="icon"/>
                    </graphic>
                </Button>
                <HBox fx:id="userButtonsHBox" alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <StackPane>
                            <children>
                                <Button fx:id="borrowButton" mnemonicParsing="false" onAction="#handleBorrowBook" styleClass="action-button, borrow-button" text="借阅">
                                    <graphic>
                                        <SVGPath content="M19 8l-4 4h3v6h2v-6h3l-4-4zM5 8l4-4-4-4v3H3v2h2v3zm10 0v2h-2v-2h2zm-4 0v2h-2v-2h2zm-4 0v2H5v-2H7zm10 8h-2v-2h2v2zm-4 0h-2v-2h2v2zm-4 0H5v-2H7v2z" styleClass="icon"/>
                                    </graphic>
                                </Button>
                                <Button fx:id="returnButton" onAction="#handleReturnBook" text="归还" styleClass="action-button, return-button"
                                        mnemonicParsing="false" visible="false" managed="false">
                                    <graphic>
                                        <SVGPath content="M19 3h-4.18C14.4 1.84 13.3 1 12 1s-2.4.84-2.82 2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 0c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm7 16H5V5h14v14zM12 6l-4 4h3v4h2v-4h3l-4-4z" styleClass="icon"/>
                                    </graphic>
                                </Button>
                            </children>
                        </StackPane>

                        <Button fx:id="myBorrowsButton" mnemonicParsing="false" onAction="#handleShowMyBorrows" styleClass="action-button, my-borrows-button" text="我的借阅">
                            <graphic>
                                <SVGPath content="M20 6h-8l-2-2H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm0 12H4V6h5.17l2 2H20v10z" styleClass="icon"/>
                            </graphic>
                        </Button>
                        <Button fx:id="renewAllButton" mnemonicParsing="false" onAction="#handleRenewAll" styleClass="action-button, renew-button" text="一键续借">
                            <graphic>
                                <SVGPath content="M12 4V1L8 5l4 4V6c3.31 0 6 2.69 6 6s-2.69 6-6 6-6-2.69-6-6H4c0 4.42 3.58 8 8 8s8-3.58 8-8-3.58-8-8-8z" styleClass="icon"/>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
                <HBox fx:id="adminButtonsHBox" alignment="CENTER_LEFT" spacing="15.0" visible="false">
                    <children>
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddBook" styleClass="action-button, add-button" text="添加">
                            <graphic>
                                <SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" styleClass="icon"/>
                            </graphic>
                        </Button>
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteBook" styleClass="action-button, delete-button" text="删除">
                            <graphic>
                                <SVGPath content="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" styleClass="icon"/>
                            </graphic>
                        </Button>
                        <Button fx:id="modifyButton" mnemonicParsing="false" onAction="#handleModifyBook" styleClass="action-button, modify-button" text="修改">
                            <graphic>
                                <SVGPath content="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34a.9959.9959 0 0 0-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" styleClass="icon"/>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="25.0" style="-fx-padding: 20px;" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="bookTable" styleClass="fancy-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colBookId" prefWidth="100.0" text="书籍ID" />
                        <TableColumn fx:id="colBookName" prefWidth="130.0" text="书名" />
                        <TableColumn fx:id="colAuthor" prefWidth="130.0" text="作者" />
                        <TableColumn fx:id="colISBN" prefWidth="100.0" text="ISBN" />
                        <TableColumn fx:id="colPublisher" prefWidth="140.0" text="出版社" />
                        <TableColumn fx:id="colDescription" prefWidth="140.0" text="描述" />
                        <TableColumn fx:id="colBorrowStatus" prefWidth="120.0" text="借阅情况" />
                        <TableColumn fx:id="colBorrowerName" prefWidth="100.0" text="用户名称" />
                        <TableColumn fx:id="colBorrowDate" prefWidth="150.0" text="借书日期" />
                        <TableColumn fx:id="colDueDate" prefWidth="150.0" text="应还日期" />
                        <TableColumn fx:id="colUserId" prefWidth="100.0" text="用户ID" />
                        <TableColumn fx:id="colUserName" prefWidth="100.0" text="用户名字" />
                        <TableColumn fx:id="colUserIdentity" prefWidth="100.0" text="身份" />
                        <TableColumn fx:id="colBorrowedBook1" prefWidth="150.0" text="借阅图书1" />
                        <TableColumn fx:id="colBorrowedBook2" prefWidth="150.0" text="借阅图书2" />
                        <TableColumn fx:id="colBorrowedBook3" prefWidth="150.0" text="借阅图书3" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" styleClass="glass-panel">
            <padding>
                <Insets bottom="15.0" left="25.0" right="25.0" top="15.0" />
            </padding>
            <children>
                <Label fx:id="userInfoLabel" text="用户ID: 1234567">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <StackPane>
                    <children>
                        <Button fx:id="literatureSearchButton" onAction="#handleShowAcademicView" text="文献检索" styleClass="action-button, literature-search-button" mnemonicParsing="false">
                            <graphic>
                                <SVGPath content="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z" styleClass="icon" />
                            </graphic>
                        </Button>
                        <Button fx:id="returnFromAcademicViewButton" onAction="#handleReturnFromAcademicView" text="⬅️ 返回图书主页" styleClass="action-button" mnemonicParsing="false" visible="false" managed="false" />
                    </children>
                </StackPane>
            </children>
        </HBox>
    </bottom>
</BorderPane>