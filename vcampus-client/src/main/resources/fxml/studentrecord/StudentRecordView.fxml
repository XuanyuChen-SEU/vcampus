<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vcampus.client.controller.StudentController"
            style="-fx-background-color: #f5f7fa;">

    <children>
        <!-- 顶部标题栏 -->
        <HBox spacing="10" alignment="CENTER_LEFT" prefHeight="60.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
              style="-fx-background-color: #2C3E50; -fx-padding: 0 20;">
            <Label text="学籍管理模块" textFill="white">
                <font>
                    <Font name="Microsoft YaHei Bold" size="22.0"/>
                </font>
            </Label>
        </HBox>

        <!-- 主内容区 -->
        <VBox fx:id="contentPane" layoutX="20.0" layoutY="70.0"
              prefHeight="510.0" prefWidth="760.0"
              AnchorPane.topAnchor="70.0" AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
              spacing="15">

            <!-- 学生信息卡片容器 -->
            <ScrollPane prefHeight="450.0" prefWidth="760.0"
                        style="-fx-background-color: transparent; -fx-border-color: transparent;">
                <VBox fx:id="studentGridContainer" spacing="15" style="-fx-padding: 10 0;">
                    <!-- 学生信息卡片 -->
                    <GridPane fx:id="studentGridPane" hgap="10" vgap="10"
                              style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="100"/>
                            <ColumnConstraints prefWidth="120"/>
                            <ColumnConstraints prefWidth="120"/>
                            <ColumnConstraints prefWidth="100"/>
                            <ColumnConstraints prefWidth="80"/>
                            <ColumnConstraints prefWidth="120"/>
                            <ColumnConstraints prefWidth="120"/>
                            <ColumnConstraints prefWidth="80"/>
                            <ColumnConstraints prefWidth="100"/>
                            <ColumnConstraints prefWidth="100"/>
                            <ColumnConstraints prefWidth="100"/>
                            <ColumnConstraints prefWidth="100"/>
                        </columnConstraints>

                        <!-- 信息标题行 -->
                        <Label text="用户ID" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label text="学号" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="一卡通号" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <Label text="姓名" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                        <Label text="性别" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
                        <Label text="学院" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.rowIndex="0" GridPane.columnIndex="5"/>
                        <Label text="专业" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.rowIndex="0" GridPane.columnIndex="6"/>
                        <Label text="年级" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.rowIndex="0" GridPane.columnIndex="7"/>
                        <Label text="出生日期" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.rowIndex="0" GridPane.columnIndex="8"/>
                        <Label text="籍贯" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.rowIndex="0" GridPane.columnIndex="9"/>
                        <Label text="政治面貌" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.rowIndex="0" GridPane.columnIndex="10"/>
                        <Label text="学籍状态" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.rowIndex="0" GridPane.columnIndex="11"/>

                        <!-- 信息内容行 -->
                        <Label fx:id="userIdLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="studentIdLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label fx:id="cardIdLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <Label fx:id="nameLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                        <Label fx:id="genderLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="4"/>
                        <Label fx:id="collegeLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="5"/>
                        <Label fx:id="majorLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="6"/>
                        <Label fx:id="gradeLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="7"/>
                        <Label fx:id="birthDateLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="8"/>
                        <Label fx:id="nativePlaceLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="9"/>
                        <Label fx:id="politicsStatusLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="10"/>
                        <Label fx:id="studentStatusLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="11"/>
                    </GridPane>
                </VBox>
            </ScrollPane>
        </VBox>

        <!-- 按钮区域，右下角 -->
        <HBox spacing="10" alignment="CENTER_RIGHT"
              AnchorPane.bottomAnchor="20.0"
              AnchorPane.rightAnchor="20.0">
            <Button fx:id="editButton" text="修改"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 6;"
                    prefWidth="80" prefHeight="30"/>
            <Button fx:id="saveButton" text="保存" visible="false"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 6;"
                    prefWidth="80" prefHeight="30"/>
            <Button fx:id="cancelButton" text="取消" visible="false"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 6;"
                    prefWidth="80" prefHeight="30"/>
        </HBox>
    </children>
</AnchorPane>
