<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vcampus.client.controller.StudentController"
            style="-fx-background-color: #f5f7fa;">

    <children>
        <!-- 顶部标题栏 -->
        <HBox spacing="10" alignment="CENTER_LEFT" prefHeight="60.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
              style="-fx-background-color: #2C3E50; -fx-padding: 0 20;">
            <Label text="学籍管理模块" textFill="white">
                <font>
                    <Font name="Microsoft YaHei Bold" size="22.0"/>
                </font>
            </Label>
        </HBox>

        <!-- 主内容区 -->
        <VBox layoutX="20.0" layoutY="70.0" spacing="15"
              prefHeight="600.0" prefWidth="760.0"
              AnchorPane.topAnchor="70.0" AnchorPane.bottomAnchor="60.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">

            <!-- 基本信息 -->
            <TitledPane text="基本信息" expanded="true">
                <content>
                    <GridPane fx:id="studentGridPane" hgap="10" vgap="10"
                              style="-fx-background-color: white; -fx-padding: 15;
                                     -fx-border-radius: 8; -fx-background-radius: 8;
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="100"/>
                            <ColumnConstraints prefWidth="150"/>
                            <ColumnConstraints prefWidth="100"/>
                            <ColumnConstraints prefWidth="150"/>
                        </columnConstraints>

                        <!-- 标题 -->
                        <Label text="用户ID" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label text="学号" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <Label text="一卡通号" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label text="姓名" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <Label text="性别" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label text="学院" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                        <Label text="专业" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label text="年级" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                        <Label text="出生日期" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <Label text="籍贯" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
                        <Label text="政治面貌" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <Label text="学籍状态" GridPane.rowIndex="5" GridPane.columnIndex="2"/>

                        <!-- 内容 -->
                        <Label fx:id="userIdLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label fx:id="studentIdLabel" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                        <Label fx:id="cardIdLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label fx:id="nameLabel" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                        <Label fx:id="genderLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Label fx:id="collegeLabel" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                        <Label fx:id="majorLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        <Label fx:id="gradeLabel" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
                        <Label fx:id="birthDateLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                        <Label fx:id="nativePlaceLabel" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
                        <Label fx:id="politicsStatusLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                        <Label fx:id="studentStatusLabel" GridPane.rowIndex="5" GridPane.columnIndex="3"/>
                    </GridPane>
                </content>
            </TitledPane>

            <!-- 联系方式 -->
            <TitledPane text="联系方式" expanded="true">
                <content>
                    <GridPane hgap="10" vgap="10"
                              style="-fx-background-color: white; -fx-padding: 15;
                                     -fx-border-radius: 8; -fx-background-radius: 8;">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="100"/>
                            <ColumnConstraints prefWidth="200"/>
                            <ColumnConstraints prefWidth="100"/>
                            <ColumnConstraints prefWidth="200"/>
                        </columnConstraints>

                        <Label text="手机号" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="phoneLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="电子邮箱" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <Label fx:id="emailLabel" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                        <Label text="宿舍地址" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="dormAddressLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    </GridPane>
                </content>
            </TitledPane>

            <!-- 父亲信息 -->
            <TitledPane text="父亲信息" expanded="false">
                <content>
                    <GridPane hgap="10" vgap="10"
                              style="-fx-background-color: white; -fx-padding: 15;
                                     -fx-border-radius: 8; -fx-background-radius: 8;">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="100"/>
                            <ColumnConstraints prefWidth="200"/>
                            <ColumnConstraints prefWidth="100"/>
                            <ColumnConstraints prefWidth="200"/>
                        </columnConstraints>

                        <Label text="姓名" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="fatherNameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="手机号" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <Label fx:id="fatherPhoneLabel" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                        <Label text="政治面貌" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="fatherPoliticsLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="工作单位" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <Label fx:id="fatherWorkLabel" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                    </GridPane>
                </content>
            </TitledPane>

            <!-- 母亲信息 -->
            <TitledPane text="母亲信息" expanded="false">
                <content>
                    <GridPane hgap="10" vgap="10"
                              style="-fx-background-color: white; -fx-padding: 15;
                                     -fx-border-radius: 8; -fx-background-radius: 8;">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="100"/>
                            <ColumnConstraints prefWidth="200"/>
                            <ColumnConstraints prefWidth="100"/>
                            <ColumnConstraints prefWidth="200"/>
                        </columnConstraints>

                        <Label text="姓名" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="motherNameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="手机号" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <Label fx:id="motherPhoneLabel" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                        <Label text="政治面貌" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="motherPoliticsLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="工作单位" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <Label fx:id="motherWorkLabel" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                    </GridPane>
                </content>
            </TitledPane>

        </VBox>

        <!-- 按钮区域，右下角 -->
        <HBox spacing="10" alignment="CENTER_RIGHT"
              AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="20.0">
            <Button fx:id="editOrSaveButton" text="修改"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 6;"
                    prefWidth="80" prefHeight="30"/>
            <Button fx:id="pdfOrCancelButton" text="导出PDF"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 6;"
                    prefWidth="80" prefHeight="30"/>
        </HBox>
    </children>
</AnchorPane>
