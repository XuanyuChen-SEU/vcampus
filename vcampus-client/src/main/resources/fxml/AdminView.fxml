<BorderPane styleClass="main-background" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vcampus.client.controller.AdminViewController">

    <!-- 顶部用户信息栏 -->
    <top>
        <HBox styleClass="user-info-bar" BorderPane.alignment="CENTER" spacing="10.0">
            <children>
                <!-- Logo区域 -->
                <HBox alignment="CENTER" spacing="8.0">
                    <ImageView fx:id="logoIconView" fitWidth="30.0" fitHeight="30.0" preserveRatio="true">
                        <image>
                            <Image url="@../images/logo-icon.png" />
                        </image>
                    </ImageView>
                    <ImageView fx:id="logoTextView" fitWidth="60.0" preserveRatio="true">
                        <image>
                            <Image url="@../images/logo-text.png" />
                        </image>
                    </ImageView>
                </HBox>
                <Label fx:id="userInfoLabel" text="👤 当前用户: 未登录" styleClass="user-info-label" 
                       HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="backToHomeButton" text="🏠 回到主页" onAction="#handleBackToHome" styleClass="back-to-home-button" 
                        HBox.hgrow="NEVER" />
                <Button fx:id="logoutButton" text="🚪 用户登出" onAction="#handleLogout" styleClass="logout-button" 
                        HBox.hgrow="NEVER" />
            </children>
            <padding>
                <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
            </padding>
        </HBox>
    </top>

    <!-- 中央内容区 -->
    <center>
        <AnchorPane fx:id="mainContentPane" BorderPane.alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
    </center>
</BorderPane>
