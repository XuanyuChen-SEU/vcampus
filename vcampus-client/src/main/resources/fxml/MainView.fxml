<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="main-background" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vcampus.client.controller.MainViewController">

    <!-- 顶部用户信息栏 -->
    <top>
        <HBox styleClass="user-info-bar" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="userInfoLabel" text="当前用户: 未登录" styleClass="user-info-label" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="logoutButton" text="登出" onAction="#handleLogout" styleClass="logout-button" />
            </children>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
        </HBox>
    </top>

    <!-- 左侧导航区 -->
    <left>
        <!-- VBox 用于垂直排列按钮 -->
        <VBox prefWidth="180.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <Button maxWidth="1.7976931348623157E308" onAction="#handleHomeNav" text="首页" />
                <Button maxWidth="1.7976931348623157E308" onAction="#handleStoreNav" text="商店" />
                <Button maxWidth="1.7976931348623157E308" onAction="#handleLibraryNav" text="图书馆" />
                <Button maxWidth="1.7976931348623157E308" onAction="#handleStudentRecordNav" text="学籍管理" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </left>

    <!-- 中央内容区 -->
    <center>
        <AnchorPane fx:id="mainContentPane" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>