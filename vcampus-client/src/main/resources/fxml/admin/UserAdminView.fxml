<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vcampus.client.controller.UserAdminViewController"
            styleClass="admin-content-background">
    
    <!-- 标题区域 -->
    <VBox fx:id="titleContainer" alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>
            <Label text="👥 用户管理系统" styleClass="admin-title" />
        </children>
    </VBox>
    
    <!-- 导航栏区域 -->
    <HBox fx:id="navigationContainer" alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="120.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>
            <Button fx:id="userListButton" text="📋 用户列表" onAction="#handleUserList" styleClass="nav-button" />
            <Button fx:id="createUserButton" text="➕ 创建用户" onAction="#handleCreateUser" styleClass="nav-button" />
            <Button fx:id="resetPasswordButton" text="🔄 重置密码" onAction="#handleResetPassword" styleClass="nav-button" />
            <Button fx:id="forgetPasswordTableButton" text="🔐 忘记密码申请" onAction="#handleForgetPasswordTable" styleClass="nav-button" />
        </children>
    </HBox>
    
    <!-- 子视图容器 -->
    <AnchorPane fx:id="subViewContainer" AnchorPane.topAnchor="180.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" styleClass="sub-view-container" />
</AnchorPane>
