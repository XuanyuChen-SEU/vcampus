<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vcampus.client.controller.userAdmin.ForgetPasswordTableViewController"
            styleClass="admin-content-background">
    
    <!-- 操作区域 -->
    <HBox fx:id="actionContainer" alignment="CENTER_LEFT" spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>
            <Button fx:id="refreshButton" text="🔄 刷新" onAction="#handleRefresh" styleClass="refresh-button" />
        </children>
    </HBox>
    
    <!-- 表格区域 -->
    <TableView fx:id="applicationTable" AnchorPane.topAnchor="70.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" styleClass="data-table">
        <columns>
            <TableColumn fx:id="userIdColumn" text="用户ID" />
            <TableColumn fx:id="submitTimeColumn" text="申请时间" />
            <TableColumn fx:id="actionColumn" text="操作" />
        </columns>
    </TableView>
</AnchorPane>