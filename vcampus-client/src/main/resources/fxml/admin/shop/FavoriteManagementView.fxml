<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vcampus.client.controller.shopAdmin.FavoriteManagementViewController"
            styleClass="admin-content-background">
    
    <!-- 搜索和操作区域 -->
    <HBox fx:id="searchContainer" alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>
            <TextField fx:id="searchField" promptText="输入用户ID搜索收藏（留空显示全部）..." styleClass="search-field" HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" text="🔍 搜索" onAction="#handleSearch" styleClass="search-button" />
            <Button fx:id="refreshButton" text="🔄 刷新" onAction="#handleRefresh" styleClass="refresh-button" />
        </children>
    </HBox>
    
    <!-- 收藏表格 -->
    <TableView fx:id="favoriteTable" AnchorPane.topAnchor="80.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" styleClass="favorite-table">
        <columns>
            <TableColumn fx:id="userIdColumn" text="用户ID" minWidth="120.0" />
            <TableColumn fx:id="productIdColumn" text="商品ID" minWidth="100.0" />
            <TableColumn fx:id="productNameColumn" text="商品名称" minWidth="200.0" />
            <TableColumn fx:id="productPriceColumn" text="商品价格" minWidth="120.0" />
            <TableColumn fx:id="addTimeColumn" text="收藏时间" minWidth="180.0" />
            <TableColumn fx:id="actionsColumn" text="操作" minWidth="100.0" />
        </columns>
    </TableView>
    
    <!-- 底部统计信息 -->
    <HBox fx:id="statsContainer" alignment="CENTER" spacing="30.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>
            <Label fx:id="totalFavoritesLabel" text="总收藏数: 0" styleClass="stats-label-highlight" />
            <Label fx:id="uniqueUsersLabel" text="收藏用户数: 0" styleClass="stats-label-highlight" />
            <Label fx:id="uniqueProductsLabel" text="被收藏商品数: 0" styleClass="stats-label-highlight" />
        </children>
    </HBox>
</AnchorPane>
