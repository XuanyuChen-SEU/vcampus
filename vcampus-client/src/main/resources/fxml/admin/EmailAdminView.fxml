<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vcampus.client.controller.EmailAdminViewController" spacing="15.0">
   <children>
      <!-- 标题和统计 -->
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label text="邮件管理" styleClass="title-label">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="totalCountLabel" text="总邮件数: 0" styleClass="info-label">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      
      <!-- 搜索栏 -->
      <VBox spacing="10.0">
         <children>
            <!-- 主题搜索 -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="主题搜索:" />
                  <TextField fx:id="searchField" promptText="输入邮件ID或主题关键词" prefWidth="250.0" />
                  <Button fx:id="searchButton" onAction="#handleSearch" text="搜索" />
                  <Button fx:id="refreshButton" onAction="#handleRefresh" text="刷新" />
               </children>
            </HBox>
            
            <!-- 用户ID搜索 -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="用户搜索:" />
                  <TextField fx:id="userSearchField" promptText="输入发送者或收信者ID" prefWidth="250.0" />
                  <Button fx:id="userSearchButton" onAction="#handleUserSearch" text="搜索用户" />
                  <Button fx:id="clearUserSearchButton" onAction="#handleClearUserSearch" text="清除" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- 邮件列表 -->
      <TableView fx:id="emailsTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="emailIdColumn" text="邮件ID" prefWidth="100.0" />
            <TableColumn fx:id="senderColumn" text="发件人" prefWidth="120.0" />
            <TableColumn fx:id="recipientColumn" text="收件人" prefWidth="120.0" />
            <TableColumn fx:id="subjectColumn" text="主题" prefWidth="200.0" />
            <TableColumn fx:id="timeColumn" text="发送时间" prefWidth="150.0" />
            <TableColumn fx:id="statusColumn" text="状态" prefWidth="80.0" />
            <TableColumn fx:id="actionsColumn" text="操作" prefWidth="150.0" />
         </columns>
      </TableView>
      
      <!-- 分页控制 -->
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="firstPageButton" onAction="#handleFirstPage" text="首页" />
            <Button fx:id="prevPageButton" onAction="#handlePrevPage" text="上一页" />
            <Label fx:id="pageInfoLabel" text="第 1 页，共 1 页" />
            <Button fx:id="nextPageButton" onAction="#handleNextPage" text="下一页" />
            <Button fx:id="lastPageButton" onAction="#handleLastPage" text="末页" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="每页显示:" />
            <ComboBox fx:id="pageSizeCombo" prefWidth="80.0" />
         </children>
      </HBox>
      
      <!-- 状态栏 -->
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label fx:id="statusLabel" text="就绪" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>
