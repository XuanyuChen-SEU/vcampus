<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vcampus.client.controller.EmailAdminViewController"
            styleClass="admin-content-background">
    
    <!-- 标题区域 -->
    <VBox fx:id="titleContainer" alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>
            <Label text="📧 邮件管理系统" styleClass="admin-title" />
        </children>
    </VBox>
    
    <!-- 导航栏区域 -->
    <HBox fx:id="navigationContainer" alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="120.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>
            <Button fx:id="allEmailsButton" text="📋 所有邮件" onAction="#handleAllEmails" styleClass="nav-button" />
            <Button fx:id="userEmailsButton" text="👤 用户邮件" onAction="#handleUserEmails" styleClass="nav-button" />
            <Button fx:id="emailStatisticsButton" text="📊 邮件统计" onAction="#handleEmailStatistics" styleClass="nav-button" />
            <Button fx:id="emailSearchButton" text="🔍 邮件搜索" onAction="#handleEmailSearch" styleClass="nav-button" />
        </children>
    </HBox>
    
    <!-- 子视图容器 -->
    <AnchorPane fx:id="subViewContainer" AnchorPane.topAnchor="180.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" styleClass="sub-view-container" />
</AnchorPane>
