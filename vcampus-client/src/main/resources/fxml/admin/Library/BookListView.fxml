<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vcampus.client.controller.libraryAdmin.BookListViewController"
            styleClass="admin-content-background">

    <HBox fx:id="searchContainer" alignment="CENTER_LEFT" spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>
            <TextField fx:id="searchField" promptText="输入书名、作者或ISBN搜索..." styleClass="search-field" HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" text="🔍 搜索" onAction="#handleSearch" styleClass="search-button" />
            <Button fx:id="refreshButton" text="🔄 刷新" onAction="#handleRefresh" styleClass="refresh-button" />
        </children>
    </HBox>

    <TableView fx:id="bookTable" AnchorPane.topAnchor="80.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" styleClass="user-table">
        <columns>
            <TableColumn fx:id="idColumn" text="书籍ID" prefWidth="50.0" />
            <TableColumn fx:id="titleColumn" text="书名" prefWidth="100.0" />
            <TableColumn fx:id="authorColumn" text="作者" prefWidth="130.0" />
            <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="120.0" />
            <TableColumn fx:id="publisherColumn" text="出版社" prefWidth="110.0" />
            <TableColumn fx:id="descriptionColumn" text="描述" prefWidth="150.0" />
            <TableColumn fx:id="statusColumn" text="借阅情况" prefWidth="90.0" />
            <TableColumn fx:id="actionsColumn" text="操作" prefWidth="150.0" />
        </columns>
    </TableView>

    <HBox fx:id="statsContainer" alignment="CENTER_LEFT" spacing="30.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
        <children>
            <Label fx:id="totalBooksLabel" text="总书籍: 0" styleClass="stats-label-highlight" />
            <Label fx:id="availableBooksLabel" text="在馆: 0" styleClass="stats-label-highlight" />
            <Label fx:id="borrowedBooksLabel" text="已借出: 0" styleClass="stats-label-highlight" />
        </children>
    </HBox>
</AnchorPane>