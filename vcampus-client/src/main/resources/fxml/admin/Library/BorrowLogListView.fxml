<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vcampus.client.controller.libraryAdmin.BorrowLogListViewController"
            styleClass="admin-content-background">

    <HBox fx:id="searchContainer" alignment="CENTER_LEFT" spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>
            <TextField fx:id="searchField" promptText="输入书名或借阅者姓名搜索..." styleClass="search-field" HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" text="🔍 搜索" onAction="#handleSearch" styleClass="search-button" />
            <Button fx:id="refreshButton" text="🔄 刷新" onAction="#handleRefresh" styleClass="refresh-button" />
        </children>
    </HBox>

    <TableView fx:id="borrowLogTable" AnchorPane.topAnchor="80.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" styleClass="user-table">
        <columns>
            <TableColumn fx:id="logIdColumn" text="记录ID" prefWidth="90.0" />
            <TableColumn fx:id="bookNameColumn" text="书名" prefWidth="140.0" />
            <TableColumn fx:id="userIdColumn" text="用户ID" prefWidth="100.0" />
            <TableColumn fx:id="usernameColumn" text="用户名" prefWidth="90.0" />
            <TableColumn fx:id="borrowDateColumn" text="借阅日期" prefWidth="130.0" />
            <TableColumn fx:id="dueDateColumn" text="应还日期" prefWidth="150.0" />
            <TableColumn fx:id="actionsColumn" text="操作" prefWidth="220.0" />
        </columns>
    </TableView>

    <HBox fx:id="statsContainer" alignment="CENTER_LEFT" spacing="30.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
        <children>
            <Label fx:id="totalLogsLabel" text="总记录数: 0" styleClass="stats-label-highlight" />
        </children>
    </HBox>
</AnchorPane>