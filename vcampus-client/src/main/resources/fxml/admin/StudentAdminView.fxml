<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.vcampus.client.controller.StudentAdminController"
      spacing="15">

    <!-- 引入同目录下的 CSS（把 student-admin.css 与此 FXML 放在同一目录下） -->
    <stylesheets>
        <URL value="@student-admin.css"/>
    </stylesheets>

    <!-- 外边距（padding）必须用嵌套元素设置 -->
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- 标题 -->
    <HBox alignment="CENTER">
        <children>
            <Label text="🎓 学生管理系统" styleClass="admin-title"/>
        </children>
    </HBox>

    <!-- 学籍状态调整按钮 -->
    <!-- 学籍状态调整按钮 -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnStudentList" text="学生列表" styleClass="action-button"/>
        <Button fx:id="btnTeacherList" text="教师列表" styleClass="action-button"/>
        <Button fx:id="btnApplicationList" text="申请列表" styleClass="action-button"/>
        <Button fx:id="btnRefreshList" text="刷新" styleClass="action-button"/>
    </HBox>

    <!-- 顶部搜索栏 -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="请输入学号或姓名"
                   HBox.hgrow="ALWAYS" styleClass="search-field"/>
        <Button fx:id="searchButton" text="🔍 搜索" styleClass="search-button"/>
    </HBox>

    <!-- 学生表格和申请表格叠加显示 -->
    <StackPane VBox.vgrow="ALWAYS">
        <children>
            <!-- 学生信息表格 -->
            <TableView fx:id="studentTable" styleClass="data-table"
                       fixedCellSize="35.0">
                <columns>
                    <TableColumn fx:id="colSelect" text="" prefWidth="40"/>
                    <TableColumn fx:id="colUserId" text="用户ID" prefWidth="100"/>
                    <TableColumn fx:id="colStudentId" text="学号" prefWidth="100"/>
                    <TableColumn fx:id="colName" text="姓名" prefWidth="80"/>
                    <TableColumn fx:id="colGender" text="性别" prefWidth="60"/>
                    <TableColumn fx:id="colCollege" text="学院" prefWidth="120"/>
                    <TableColumn fx:id="colMajor" text="专业" prefWidth="120"/>
                    <TableColumn fx:id="colGrade" text="年级" prefWidth="80"/>
                    <TableColumn fx:id="colStudentStatus" text="学籍状态" prefWidth="80"/>
                    <TableColumn fx:id="colAction" text="操作" prefWidth="210"/>
                </columns>
            </TableView>

            <TableView fx:id="teacherTable" styleClass="data-table" visible="false"
                       fixedCellSize="35.0">
                <columns>
                    <TableColumn fx:id="colTeacherUserId" text="工号" prefWidth="100"/>
                    <TableColumn fx:id="colTeacherName" text="姓名" prefWidth="100"/>
                    <TableColumn fx:id="colTeacherGender" text="性别" prefWidth="60"/>
                    <TableColumn fx:id="colTeacherCollege" text="学院" prefWidth="150"/>
                    <TableColumn fx:id="colTeacherDepartment" text="部门" prefWidth="150"/>
                    <TableColumn fx:id="colTeacherTitle" text="职称" prefWidth="100"/>
                    <TableColumn fx:id="colTeacherPhone" text="电话" prefWidth="120"/>
                    <TableColumn fx:id="colTeacherEmail" text="邮箱" prefWidth="150"/>
                    <TableColumn fx:id="colTeacherOffice" text="办公室" prefWidth="120"/>
                    <TableColumn fx:id="colTeacherAction" text="操作" prefWidth="150"/>
                </columns>
            </TableView>

            <!-- 申请信息表格 -->
            <TableView fx:id="applicationTable" styleClass="data-table" visible="false"
                       fixedCellSize="35.0">
                <columns>
                    <TableColumn fx:id="colAppStudentId" text="学号" prefWidth="100"/>
                    <TableColumn fx:id="colAppName" text="姓名" prefWidth="100"/>
                    <TableColumn fx:id="colAppReason" text="请假原因" prefWidth="200"/>
                    <TableColumn fx:id="colAppStatus" text="状态" prefWidth="80"/>
                    <TableColumn fx:id="colAppAction" text="操作" prefWidth="150"/>
                </columns>
            </TableView>
        </children>
    </StackPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Region HBox.hgrow="ALWAYS"/> <!-- 占位，将按钮推到右边 -->
        <Button fx:id="btnSelectAll" text="全选" styleClass="all-button"/>
        <Button fx:id="btnAdjustStatus" text="调整学籍状态" styleClass="status-button"/>
    </HBox>

