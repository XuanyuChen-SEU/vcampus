<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
    namespace：名称空间
-->
<mapper namespace="com.vcampus.database.mapper.UserMapper">

    <update id="loadUsersFromCsv" parameterType="java.lang.String">
        LOAD DATA LOCAL INFILE #{filePath}
        INTO TABLE vcampus_db.tb_user
        CHARACTER SET utf8mb4
        FIELDS TERMINATED BY ','
        LINES TERMINATED BY '\n'
        IGNORE 1 ROWS
        (userId, @passwordVar)
        SET password = REPLACE(@passwordVar, '\r', '')
    </update>

    <!-- 查询所有用户 -->
    <select id="selectAll" resultType="com.vcampus.common.dto.User">
        select * from vcampus_db.tb_user
    </select>


    <select id="select" resultType="com.vcampus.common.dto.User">
        select *
        from vcampus_db.tb_user
        where
            userId = #{userId}
          and password = #{password};
    </select>


    <select id="selectById" resultType="com.vcampus.common.dto.User">
        select * from vcampus_db.tb_user where userId = #{userId};
    </select>



    <select id="selectByCondition" resultType="com.vcampus.common.dto.User">
        select *
        from vcampus_db.tb_user
        /*where
        1=1*/
        <where>
            <if test="userId!= null and userId != '' ">
                and userId = #{userId}
            </if>
            <if test="password != null and password != ''">
                and password like #{password}
            </if>
        </where>
    </select>


    <select id="selectBySingleCondition" resultType="com.vcampus.common.dto.User">
            select *
            from vcampus_db.tb_user
            <where>
                <choose>
                    <when test="userId != null and userId != '' ">
                            and userId = #{userId}
                    </when>
                    <when test="password != null and password != ''">
                        and password like #{password}
                    </when>
                </choose>
            </where>
    </select>





    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        insert into vcampus_db.tb_user(userId,password)
        values(#{userId},#{password})
    </insert>



    <update id="update">
            update vcampus_db.tb_user
            <set>
                <if test="password != null and password != ''">password = #{password},</if>
            </set>
            where userId = #{userId}
    </update>


    <delete id="deleteById">
        delete from vcampus_db.tb_user where userId = #{userId}
    </delete>


    <delete id="deleteByIds">
        delete from vcampus_db.tb_user where userId
        in
        (
        <foreach collection="array" item="userId" separator=","  >
            #{userId}
        </foreach>
        )
    </delete>


</mapper>